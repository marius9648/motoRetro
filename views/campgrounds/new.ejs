
<%- include ("../partials/header") %>

<div class="container">
	<div class="row">
			<h1 class="text-center">Create a New Post</h1>
			<div style="width: 30%; margin: 30px auto">
				<form action="/motoretro" method="POST">
					<div class="form-group">
						<input class="form-control" type="text" name="name" placeholder="name">	
					</div>
					<div class="form-group">
						<input class="form-control" type="number" name="year" placeholder="Year of production">	
					</div>
					<div class="form-group">
						<input class="form-control" type="text" name="image" placeholder="image url">
					</div>
					<div class="form-group">
						<textarea class="form-control descriere"  name="description" placeholder="description"></textarea>
					</div>
					
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</form>
				<a href="/motoretro">Back to home page</a>
			</div>
			
	</div>
</div>			
			
<%- include ("../partials/footer") %>