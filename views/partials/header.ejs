 <!DOCTYPE html>
<html>
	<head>
		<title>MotoRETRO</title>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
		<link rel="stylesheet" href="/stylesheets/main.css">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	</head>
	<body>
	 <div id="padding" class="container">
		<nav class="navbar navbar-default">
			<div class="container-fluid">
				<div class="navbar-header">
					<a class="navbar-brand" href="/"><i class="fa fa-car"></i> MotoRETRO</a>
				</div>
				<div class="navbar-header">
					<a class="navbar-brand" href="/motoretro"><i class="fa fa-home"></i> Home</a>
				</div>
				<div class="collapse navbar-collapse">
					<ul class="nav navbar-nav navbar-right">
						<% if(!currentUser) { %>
							<li><a href="/login"><span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> Login</a></li>
							<li><a href="/register"><i class="fa fa-user-plus"></i> Sign Up</a></li>
						<% } else { %>
							<li>
								<a><i class="fa fa-check-circle"></i> Logged in as <%= currentUser.username %></a>
							</li>
							<li><a href="/logout">  <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> Logout</a></li>
						<% } %> 
					</ul>
				</div>
			</div>
		
		</nav>
	</div>
		<div class="container">
			<% if(error && error.length > 0){ %>
				<div class="alert alert-danger" role="alert"><i class="fa fa-exclamation-circle"></i> <%= error %> </div>	
			<% } %>
			
			<% if(success && success.length > 0){ %>
			<div class="alert alert-success" role="alert"><i class="fa fa-check"></i> <%= success %> </div>
			<% } %>
 		 
		 
		