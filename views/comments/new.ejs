
<%- include ("../partials/header") %>

<div class="container">
	<div class="row">
			<h1 class="text-center">Add New Comment to <%= campground.name %></h1>
			<div style="width: 30%; margin: 30px auto">
				<form action="/motoretro/<%= campground._id %>/comments" method="POST">
					<div class="form-group">
						<textarea class="form-control"  name="comment[text]" placeholder="comment"></textarea>	
					</div>

					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</form>
				<a href="/motoretro">Back to home page</a>
			</div>
			
	</div>
</div>			
			
